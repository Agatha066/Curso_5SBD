@model IEnumerable<CarroCRUD.Models.Pagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTitular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCartao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataValidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVV)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeTitular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCartao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataValidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PagamentoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PagamentoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PagamentoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
